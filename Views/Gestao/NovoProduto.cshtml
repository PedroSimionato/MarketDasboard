@model marketproject.DTO.ProdutoDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Criar novo produto</h3>
<hr/>
<form class="form-horizontal" asp-controller="Produto" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do produto">
    <span asp-validation-for="Nome"></span><br>

    <label asp-for="CategoriaId">Categoria</label>
    <select class="form control" asp-for="CategoriaId" asp-items='@(new SelectList(@ViewBag.Categorias, "Id", "Nome"))'></select><br><br>

    <label asp-for="FornecedorId">Fornecedor</label>
    <select class="form control" asp-for="FornecedorId" asp-items='@(new SelectList(@ViewBag.Fornecedores, "Id", "Nome"))'></select><br><br>

    <label asp-for="PrecoDeCusto">Preco de custo</label>
    <input type="number" step="any" asp-for="PrecoDeCusto" class="form-control" placeholder="PreÃ§o de custo do produto">
    <span asp-validation-for="PrecoDeCusto"></span><br>

    <label asp-for="PrecoDeVenda">Preco de venda</label>
    <input type="number" step="any" asp-for="PrecoDeVenda" class="form-control" placeholder="Preco que o produto sera vendido">
    <span asp-validation-for="PrecoDeVenda"></span><br>

    <label asp-for="Medicao">Medicao</label>
    <select class="form control" asp-for="Medicao">
        <option value="0">Litro</option>
        <option value="1">Kg</option>
        <option value="2">Unidade</option>
    </select><br><br>
    <button class="btn btn-success">Cadastrar</button>
    <hr/>
</form>