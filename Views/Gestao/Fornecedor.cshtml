@model IEnumerable<marketproject.Models.Fornecedor>
@{
    Layout = "_LayoutAdmin";
}
<h3>Fornecedores</h3>
<hr/>
<a asp-controller="Gestao" asp-action="NovoFornecedor" class="btn btn-success">Cadastrar novo fornecedor</a>
<hr/>

<script>
    $(document).ready( function () {
    $('#fornecedor').DataTable();
} );
</script>

<table id="fornecedor"class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fornecedor in Model)
        {
            <tr>
                <td>@fornecedor.Id</td>
                <td>@fornecedor.Nome</td>
                <td>@fornecedor.Email</td>
                <td>@fornecedor.Telefone</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarFornecedor/@fornecedor.Id">Editar</a> 
                    <form asp-controller="Fornecedor" asp-action="Deletar" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@fornecedor.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>